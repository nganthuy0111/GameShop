<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background trắng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <!-- Viền bottom nhẹ - chỉ hiển thị ở bottom -->
    <item android:top="-1dp" android:left="-1dp" android:right="-1dp" android:bottom="0dp" android:height="0.5dp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/>
        </shape>
    </item>
</layer-list>
